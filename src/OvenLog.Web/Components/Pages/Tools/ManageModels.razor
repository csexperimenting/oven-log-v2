@page "/tools/models"
@using OvenLog.Domain.Entities
@using OvenLog.Infrastructure.Services
@inject AdminService AdminService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Oven Log - Manage Models</PageTitle>

<div class="admin-container">
    <div class="admin-header">
        <h2>Manage Models</h2>
        <button class="btn" @onclick="GoBack">Back to Tools</button>
    </div>

    <div class="admin-form">
        <h3>@(_editingId.HasValue ? "Edit Model" : "Add New Model")</h3>
        <div class="form-group">
            <label>Name</label>
            <input type="text" @bind="_name" placeholder="Model name" />
        </div>
        <div class="form-group">
            <label>Manufacturer</label>
            <select @bind="_manufacturerId">
                <option value="0">-- Select Manufacturer --</option>
                @foreach (var mfr in _manufacturers)
                {
                    <option value="@mfr.Id">@mfr.Name</option>
                }
            </select>
        </div>
        <div class="form-actions">
            <button class="btn btn-add" @onclick="Save">@(_editingId.HasValue ? "Update" : "Add")</button>
            @if (_editingId.HasValue)
            {
                <button class="btn" @onclick="CancelEdit">Cancel</button>
            }
        </div>
    </div>

    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Manufacturer</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in _items)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Manufacturer.Name</td>
                    <td>
                        <button class="btn" @onclick="() => Edit(item)">Edit</button>
                        <button class="btn btn-remove" @onclick="() => Delete(item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    private List<Model> _items = new();
    private List<Manufacturer> _manufacturers = new();
    private string _name = string.Empty;
    private int _manufacturerId;
    private int? _editingId;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        _items = await AdminService.GetAllModelsAsync();
        _manufacturers = await AdminService.GetAllManufacturersAsync();
    }

    private async Task Save()
    {
        if (string.IsNullOrWhiteSpace(_name) || _manufacturerId == 0)
            return;

        if (_editingId.HasValue)
        {
            await AdminService.UpdateModelAsync(_editingId.Value, _name, _manufacturerId);
        }
        else
        {
            await AdminService.CreateModelAsync(_name, _manufacturerId);
        }

        _name = string.Empty;
        _manufacturerId = 0;
        _editingId = null;
        await LoadData();
    }

    private void Edit(Model item)
    {
        _editingId = item.Id;
        _name = item.Name;
        _manufacturerId = item.ManufacturerId;
    }

    private void CancelEdit()
    {
        _editingId = null;
        _name = string.Empty;
        _manufacturerId = 0;
    }

    private async Task Delete(int id)
    {
        await AdminService.DeleteModelAsync(id);
        await LoadData();
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/tools");
    }
}
